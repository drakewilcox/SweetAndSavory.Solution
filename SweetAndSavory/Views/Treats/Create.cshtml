@{
  Layout = "_Layout";
}

@model SweetAndSavory.Models.Treat

<div class="card set-page text-center">
  <h1>Add A New Treat</h1>
  <hr>
  <br>
  @using (Html.BeginForm())
  {
    @Html.LabelFor(model => model.Name)
    <br>
    @Html.TextBoxFor(model => model.Name)
    <br>
    <br>
    <input class="btn btn-dark btn-lg" type="submit" value="Add Treat"/>
  }
<hr>
<p>@Html.ActionLink("Back to Treats List", "Index", "Treats", null, new { @class = "btn btn-dark btn-md" } )</p>
</div>