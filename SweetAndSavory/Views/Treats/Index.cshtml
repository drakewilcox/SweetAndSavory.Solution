@{
  Layout = "_Layout";
}
@using SweetAndSavory.Models;
@model List<SweetAndSavory.Models.Treat>;
  <div class="card set-page text-center">
    <h1>Treats</h1>
    <hr>
    <br>
    @if (@Model.Count == 0)
    {
      <p>No treats have been added yet!</p>
    } 

    @foreach (Treat treat in Model)
    {
      <h4>@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId }, new {@class = "content"})</h4>
    }
    <hr>
    @if(User.Identity.IsAuthenticated)
    {
    <p>@Html.ActionLink("Add Treat", "Create", "Treats", null, new { @class = "btn btn-dark btn-lg"})</p>
    }
    <p>@Html.ActionLink("Home", "Index", "Home", null,  new { @class = "btn btn-dark btn-lg" } )</p>
  </div>